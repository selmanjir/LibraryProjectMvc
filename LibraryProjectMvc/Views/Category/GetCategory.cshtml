@model LibraryProjectMvc.Models.Entity.Categories
@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<body style="background-image:url(/web2/resimler/Category.jpg)">
</body>


@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div style="position: absolute;right: 1000px"></div>
    <div class="form-group" >
        @*Html.LabelFor(c=> c.CategoryId)*@
        <label style="color:white;position:absolute;right:1000px">&nbsp KATEGORİ ID &nbsp; </label>
        <br />
        @Html.TextBoxFor(c => c.CategoryId, new { @class = "form-inline" })
        <br />
        <br />
        @*Html.LabelFor(c=> c.CategoryName ) *@
        <label style="color:white;position:absolute;right:990px">&nbsp KATEGORİ ADI &nbsp;</label>
        <br />
        @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-inline" })
    </div>
    <div>
        <button class="btn btn-primary">Güncelle</button>
    </div>
}