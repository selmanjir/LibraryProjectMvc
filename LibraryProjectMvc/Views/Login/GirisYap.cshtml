<body>
    <h1>Giriş Paneli</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Yap</h2>
        @using (Html.BeginForm("GirisYap", "Login", FormMethod.Post))
        {


            <div class=" w3l-form-group">
                <label>Kullanıcı Adı:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adınız" required="required" name="UserName" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Şifreniz" required="required" name="Password" />
                </div>
            </div>
            <div class="forgot">
                <a href="#">Şifremi Unuttum?</a>
                <p><input type="checkbox">Beni Hatırla</p>
            </div>
            <button type="submit">Giriş Yap</button>
        }
        <p class=" w3l-register-p">Hesabınız yok mu ?<a href="/Register/Kayit/" class="register"> Kayıt Ol</a></p>
        <a href="/Vitrin/Index/" class="register" style="margin-left:150px">Siteye geri dön</a>
    </div>
    
    <footer>
        
        <p class="copyright-agileinfo"> &copy; 2021 Tüm Hakları Saklıdır | Design by <a href="http://w3layouts.com">W3layouts</a></p>
    </footer>

</body>

